{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!{% endblock %}

{% block content %}
    <link rel="stylesheet" href="{{ asset("css/css.css") }}">
    <link rel="stylesheet" href="{{ asset("css/profil.css") }}">

    <div class="background-container" style="background-image: url('{{ asset('images/paris-velo.jpg') }}'); background-size: cover; background-position: center; background-attachment: fixed; padding: 100px; border-radius: 10px; position: relative;">


        <!-- Bouton "Retour" dans le coin supÃ©rieur gauche -->
        <a href="{{ path('app_accueil_profil', {'id_user': app.user.id }) }}" class="btn position-absolute top-0 start-0 m-3" style="z-index: 10;">Retour</a>

        <div class="container">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}

            <div class="d-flex justify-content-center">
                <h1>Mes informations</h1>
            </div>
            <br>
            {{ form_start(profilForm) }}

            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_row(profilForm.nom) }}
                </div>
                <div class="col-md-6 mb-3">
                    {{ form_row(profilForm.prenom) }}
                </div>
                <div class="col-md-6 mb-3">
                    {{ form_row(profilForm.date_naiss) }}
                </div>
                <div class="col-md-6 mb-3">
                    {{ form_row(profilForm.adresse) }}
                </div>
                <div class="col-md-6 mb-3">
                    {{ form_row(profilForm.code_postal) }}
                </div>
                <div class="col-md-6 mb-3">
                    {{ form_row(profilForm.ville) }}
                </div>
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" class=" btn btn-primary">Modifier</button>
            </div>
            {{ form_end(profilForm) }}
        </div>
    </div>
{% endblock %}
